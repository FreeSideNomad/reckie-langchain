[flake8]
max-line-length = 100
extend-ignore = E203, W503, B008, D400, D401
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info

# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
# B008: function calls in argument defaults (FastAPI pattern)
# D400: docstring first line period (test questions allowed)
# D401: docstring imperative mood (not enforced)
